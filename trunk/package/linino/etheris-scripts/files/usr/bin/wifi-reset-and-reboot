#!/bin/ash

/sbin/uci set "wireless.radio0.channel=11"
/sbin/uci set "wireless.@wifi-iface[0].mode=ap"
/sbin/uci set "wireless.@wifi-iface[0].ssid=Arduino"
/sbin/uci set "wireless.@wifi-iface[0].encryption=none"
/sbin/uci delete "wireless.@wifi-iface[0].key"
/sbin/uci delete "wireless.radio0.country"

/sbin/uci set "network.lan.ifname=eth0"
/sbin/uci set "network.lan.type=bridge"
/sbin/uci set "network.lan.ipaddr=192.168.240.1"
/sbin/uci set "network.lan.netmask=255.255.255.0"
/sbin/uci set "network.lan.proto=static"

/sbin/uci commit

/sbin/reboot

