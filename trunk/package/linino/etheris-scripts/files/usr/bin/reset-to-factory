#!/bin/sh

PATH=$PATH:/bin:/sbin:/usr/bin

if [ ! -e /dev/sda1 ]
then
        exit 1
fi

mkdir -p /tmp_restore || exit 1
mount /dev/sda1 /tmp_restore || exit 1

if [ ! -f /tmp_restore/reset-to-factory ]
then
        umount /tmp_restore
        rmdir /tmp_restore
        exit 1
fi

blink-start 100

. /sbin/firstboot

reset_has_fo=true
boot_run_hook jffs2reset

